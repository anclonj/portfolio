extends ../main.layout.pug

block content
    .flex-layout
        .layout-wrap
            .w-container
                .works__content
                    section.blog__top
                        .blog__socials
                            ul.socials__list.socials__list--blog
                                each item in ['vk', 'github', 'in']
                                    li.socials__item
                                        a.socials__link.social__link--blog(href="#")
                                            svg.socials__icon.socials__icon--blog()
                                                use(xlink:href=`./images/icons/sprite.svg#${item}`)
                        .hamburger.hamburger--blog 
                            a.hamburger__btn.hamburger__btn--blog(href="")
                                svg.hamburger__img.hamburger__img--blog
                                    use(xlink:href="./images/icons/sprite.svg#hamburger")
                    section.about__person   
                        .person__block.person__block--about
                            .person__block--group
                                .person__avatar
                                    i.person__avatar--img
                                .person__name Александр Иванов
                                .person__caption Личный сайт веб разработчика
                            .person__arrow
                                a.person__arrow--link(href="#")
                                    svg.person__arrow--img
                                        use(xlink:href="./images/icons/sprite.svg#portf_arrow_down")
        .layout-down
            footer.blog__footer
                .blog__footer--up
                    .w-container
                        ul.upfooter
                            li.upfooter__layout.upfooter__mini
                                span.upfooter__mini--text 
                                    | Этот сайт я сделал в рамках обучения 
                                    | в Школе онлайн образования LoftSchool. 
                            li.upfooter__layout.upfooter__layoute--lefta
                                nav.footer__nav
                                    ul.fnav__list
                                        li.fnav__item
                                            a.fnav__link(href="works.html") Мои работы
                                        li.fnav__item
                                            a.fnav__link(href="about.html") Обо мне
                                        li.fnav__item
                                            a.fnav__link(href="blog.html") Блог    
                                        li.fnav__item
                                            a.fnav__link(href="login.html") Авторизация                     
                                .blog__socials.blog__socials--footer
                                    ul.socials__list.socials__list--blog
                                        each item in ['vk', 'github', 'in']
                                            li.socials__item.social__item--footer
                                                a.socials__link.social__link--footer(href="#")
                                                    svg.socials__icon.socials__icon--footer
                                                        use(xlink:href=`./images/icons/sprite.svg#${item}`)
                            li.upfooter__layout
                                .upfooter__article
                                    article.article__contnet 
                                        | Всегда пишите код так, будто сопровождать его будет 
                                        | склонный к насилию психопат, который знает, где вы живете.
                                    span.article__author
                                        | — Martin Golding
                .blog__footer--down  
                    .blog__green2  
                    .w-container
                        ul.copyright__list.copyright__list--footer
                            li.copyright__item 
                                span.copyright__text &copy; Александр Иванов
                            li.copyright__item 
                                span.copyright__text Создано с любовью в Loftschool
                            li.copyright__item
                                span.copyright__text 2018